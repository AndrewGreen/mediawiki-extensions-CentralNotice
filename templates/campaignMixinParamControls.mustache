<div class="campaignMixinControls" id="{{divId}}">
{{#params}}
	<p>
		<label for="{{inputName}}">
			{{labelMsg}}
			<input
				type="{{inputType}}"
				{{#inputSizeFlagAndVar}}size="{{inputSize}}"{{/inputSizeFlagAndVar}}
				value="{{inputValue}}"
				name="{{inputName}}"
				{{#checkedFlagAndVar}}checked="{{checked}}"{{/checkedFlagAndVar}}
				data-data-type="{{dataType}}" />
		</label>
	</p>
{{/params}}
</div>